  </head>
  <body>
    <div class="container">
      <header>
        <h2>CCTV맨</h2>
        <nav>
          <ul>
            <li><a href="/">홈으로</a></li>
            <li><a href="/cctv">부산 CCTV 보기</a></li>
            <li><a href="/school">학교 주위의 CCTV보기(동래구)</a></li>
            <li><a href="/samchunpo">삼천포 CCTV 보기</a></li>
          </ul>
        </nav>
      </header>
    </div>
    <h1>삼천포 CCTV 보기</h1>
    <input type="button" onclick="go()" value="민세집" />
    <div
      id="map"
      style="width: 80%; height: 550px; margin-left: auto; margin-right: auto"
    ></div>
    <script
      type="text/javascript"
      src="//dapi.kakao.com/v2/maps/sdk.js?appkey=fdadc7ae7f717f0f74286d7b010b44ee"
    ></script>
    <script>
      //const view = document.querySelector("#map");
      let center1 = 35.08328696718037;
      let center2 = 128.08738240111157;
      make(0);
      function go() {
        center1 = 34.947597458403116;
        center2 = 128.08556296655445;
        /*view.remove();
        CONST NE = document.createElement('div');*/
        make(1);
      }
      function make(mode) {
        let list = "<%= JSON.stringify(list)%>";
        list = list.replaceAll("&#34;", '"');
        list = JSON.parse(list);
        var mapContainer2 = document.getElementById("map"), // 지도를 표시할 div
          mapOption2 = {
            center: new kakao.maps.LatLng(center1, center2), // 지도의 중심좌표
            level: 5, // 지도의 확대 레벨
          };
        var map2 = new kakao.maps.Map(mapContainer2, mapOption2); // 지도를 생성합니다
        var position = [];
        for (let i = 0; i < list.length; i++) {
          // list에서 좌표 불러서 position에 넣음
          let l = {
            title: list[i][1],
            latlng: new kakao.maps.LatLng(list[i][3], list[i][4]),
          };
          position.push(l);
        }
        if (mode) {
          let l = {
            title: "민세의 집",
            latlng: new kakao.maps.LatLng(
              34.947597458403116,
              128.08556296655445
            ),
          };
          position.push(l);
        }
        for (let i = 0; i < position.length; i++) {
          var marker = new kakao.maps.Marker({
            map: map2,
            position: position[i].latlng,
            title: position[i].title,
          });
        }
      }
    </script>
  </body>
</html>
